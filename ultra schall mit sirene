#define TRIG_PIN 9  // Trig-Pin des HC-SR04
#define ECHO_PIN 10 // Echo-Pin des HC-SR04
#define BUZZER 8    // Aktiver Buzzer-Pin

void setup() {
    Serial.begin(9600);  // Serielle Kommunikation starten
    pinMode(TRIG_PIN, OUTPUT);
    pinMode(ECHO_PIN, INPUT);
    pinMode(BUZZER, OUTPUT);
}

void loop() {
    // Ultraschall-Impuls senden
    digitalWrite(TRIG_PIN, LOW);
    delayMicroseconds(2);
    digitalWrite(TRIG_PIN, HIGH);
    delayMicroseconds(10);
    digitalWrite(TRIG_PIN, LOW);

    // Zeit messen, die der Impuls für Hin- und Rückweg braucht
    long duration = pulseIn(ECHO_PIN, HIGH);

    // Entfernung berechnen (Schallgeschwindigkeit: 343 m/s oder 0,0343 cm/µs)
    float distance = (duration * 0.0343) / 2;

    // Entfernung auf der seriellen Konsole ausgeben
    Serial.print("Entfernung: ");
    Serial.print(distance);
    Serial.println(" cm");

    // Wenn Abstand <= 10 cm ist, Buzzer einschalten
    if (distance <= 10.0) {
        digitalWrite(BUZZER, HIGH); // Buzzer an
    } else {
        digitalWrite(BUZZER, LOW);  // Buzzer aus
    }

    delay(500); // Kurze Pause, um die Messung zu stabilisieren
}

